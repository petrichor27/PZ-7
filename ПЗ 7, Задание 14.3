#include <iostream>
using namespace std;
void funp( int* raz,  int n, int i, int& num, int k )
{
	if (i == k)
	{
		int kolvo = 0;
		
		for (int l = 0; l < k; l++)
			if (raz[l] == 2) kolvo++;
		if (kolvo == 3)
		{
			cout << num <<") ";
			for (int l = 0; l < k; l++)
				cout << raz[l];
			num++; 
			cout << endl;
		}
		
		kolvo = 0;
		
	}
	else
		for (int j = 0; j < n; j++)
		{
			raz[i] = j + 1;
			funp(raz, n, i + 1, num, k);
		}
}
int main()
{
	setlocale(LC_ALL, "RUS");
	int n, k;
	n = 8;
	k = 6;
	int* raz = new int[k];
	int i = 0, num = 1;
	funp(raz,  n, i, num, k);
}
